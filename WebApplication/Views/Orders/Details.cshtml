@model DomainModel.Order



<h2>Детализация</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>Номер заказа</dt>

        <dd>
            @Html.DisplayFor(model => model.idOrder)
        </dd>


        <dt>Имя клиента</dt>

        <dd>
            @foreach (var value in ViewBag.idClient)
            {
                if (Model.idClient == value.idClient)
                {
                    @Html.Raw((string)value.clientName);
                }
            }
        </dd>

        <dt>Услуга</dt>

        <dd>
            @Html.DisplayFor(model => model.nameService)
        </dd>

        <dt>Адрес</dt>

        <dd>
            @Html.DisplayFor(model => model.lawnAdress)
        </dd>

        <dt>Площадь</dt>

        <dd>
            @Html.DisplayFor(model => model.lawnArea)
        </dd>

        <dt>Стоимость</dt>

        <dd>
            @Html.DisplayFor(model => model.totalCost)
        </dd>

        <dt>Время</dt>

        <dd>
            @Html.DisplayFor(model => model.orderTime)
        </dd>

    </dl>
</div>
<p class="btn btn-default">
    
    @Html.ActionLink("Назад", "Index")
</p>
