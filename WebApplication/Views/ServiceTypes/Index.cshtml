@using DomainModel
@model IGenericRepository<ServiceType>


<h2>Услуги</h2>

<p class="btn btn-default">
    @Html.ActionLink("Добавить", "Create")
</p>
<p></p>
<table class="table">
    <tr>
        <th>Название</th>
        <th>Цена за кв.м.</th>
        <th></th>
    </tr>

@foreach (var item in Model.GetAll()) {
    <tr>
        <td>           
            @Html.DisplayFor(modelItem => item.nameService)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.priceService)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.nameService }) |
            @Html.ActionLink("Детализация", "Details", new { id = item.nameService }) |
            @Html.ActionLink("Удаление", "Delete", new { id = item.nameService })
        </td>
    </tr>
}

</table>
