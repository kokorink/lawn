@model DomainModel.Client



<h2>Удаление клиента</h2>

<h3>Вы уверены, что хотите удалить этого клиента?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>Имя клиента</dt>

        <dd>
            @Html.DisplayFor(model => model.clientName)
        </dd>

        <dt>Номер телефона</dt>

        <dd>
            @Html.DisplayFor(model => model.clientPhone)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <p> <input type="submit" value="Удалить" class="btn btn-default" /></p>
        <p class="btn btn-default">@Html.ActionLink("Отмена", "Index")</p>
    </div>
    }
</div>
